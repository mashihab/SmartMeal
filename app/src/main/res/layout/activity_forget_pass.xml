<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/forgetpage"
    android:layout_height="match_parent"
    tools:context=".ui.ForgetPass">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_height="300dp">

        <TextView
            android:layout_width="match_parent"
            android:text="Forget Password"
            android:layout_marginBottom="20dp"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_username_id_for"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_dark_gray"
            android:hint="username"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/et_password_id_for"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_dark_gray"
            android:hint="New password"
            android:paddingLeft="20dp" />

        <Button
            android:id="@+id/bt_change_id_for"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/buttonstyle1"
            android:text="Change Password"
            android:textColor="#fff"
            android:textSize="20sp" />


    </LinearLayout>


</LinearLayout>